{
  "manifest_version": 2,

  "name": "Service Desk Helper",
  "description": "Make It Easy!",
  "version": "1.2",

  "browser_action": {
    "default_icon": "icon.png"
  },

  "permissions": [
    "tabs"
  ],

  "content_scripts": [
    {
      "matches": [
	"http://servicedesk.gradient.ru/Task/*"
      ],
      "js": ["content.js"]
     }
   ]
}
